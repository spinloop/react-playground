small-laptop-width = 1024px
tablet-width = 768px

below(breakpoint)
  @media screen and (max-width: breakpoint - 1)
    { block }

*, *:before, *:after
  box-sizing: border-box

body
  max-width: 1100px

header
  border: blue solid 1px
  display: flex

  .logo
    border: red solid 1px
    flex-grow: 2
    align-self: center
    flex: 1

  .link1
    border: red solid 1px
    flex-grow: 1
    text-align: right

  .link2
    border: red solid 1px
    flex-grow: 0.5
    align-self: flex-end

.content
  display: flex
  flex-direction: column

h2
  color: blue

.test-flex
  background-color: gray
  flex: 1 0 auto

  +below(tablet-width)
    background-color: red
    color: white

img
  flex: 1
  width: 100%

.map-container
  width: 100%
  height: 400px
